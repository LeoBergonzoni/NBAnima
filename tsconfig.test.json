{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": ".tmp-tests",
    "rootDir": ".",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": false,
    "noEmit": false,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "src/**/*.test.ts",
    "tests/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}