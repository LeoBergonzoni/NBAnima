{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "Node16",
    "outDir": ".tmp-tests",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": false,
    "noEmit": false
  },
  "include": ["src/**/*.test.ts"]
}
